{
  "name"            : "mocaccino",
  "version"         : "0.2.1",
  "description"     : "Make Mocha play nicely with Browserify",
  "keywords"        : ["mocha", "runner", "stream"],
  "author"          : "Maximilian Antoni (http://maxantoni.de)",
  "homepage"        : "https://github.com/mantoni/mocaccino.js",
  "main"            : "./lib/mocaccino.js",
  "engines"         : {
    "node"          : ">=0.10"
  },
  "bin"             : {
    "mocaccino"     : "bin/cmd.js"
  },
  "scripts"         : {
    "start"         : "mocha --watch",
    "lint"          : "jslint --color -- ./**/*.js",
    "test"          : "npm run lint && mocha -R spec"
  },
  "repository"      : {
    "type"          : "git",
    "url"           : "https://github.com/mantoni/mocaccino.js.git"
  },
  "dependencies"    : {
    "through"       : "~2.3.4",
    "resolve"       : "~0.6.1"
  },
  "devDependencies" : {
    "mocha"         : ">=1.17 <2",
    "jslint"        : "~0.2.5",
    "phantomic"     : "~0.2.1"
  },
  "files"           : ["bin", "lib", "README.md", "LICENSE"],
  "license"         : "MIT"
}
