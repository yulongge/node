    ]
  },
  "devDependencies": {
    "codeclimate-test-reporter": "0.1.0",
    "echint": "^1.3.0",
    "istanbul": "^0.3.17",
    "mocha": "^2.2.5",
    "should": "^7.0.1",
    "standard": "^4.5.2"
  },
  "dependencies": {
    "debug-log": "^1.0.0",
    "find-root": "^0.1.1",
    "xtend": "^4.0.0"
  }
